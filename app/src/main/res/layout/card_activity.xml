<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:id="@+id/cardViewBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:padding="10dp"
            android:src="@color/gray"
            android:contentDescription="Activity Image" />

        <TextView
            android:id="@+id/textViewDateBack"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignEnd="@id/imageViewBack"
            android:layout_below="@id/imageViewBack"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:maxLines="2"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="DATE\n31"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/textViewTitleBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageViewBack"
            android:layout_toStartOf="@+id/textViewDateBack"
            android:layout_alignStart="@id/imageViewBack"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Title Back"/>

        <TextView
            android:id="@+id/textViewTagsBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTitleBack"
            android:layout_toStartOf="@+id/textViewDateBack"
            android:layout_alignStart="@id/imageViewBack"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text="#tag1 #tag2 #tag3"/>

        <TextView
            android:id="@+id/textViewDescriptionBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTagsBack"
            android:layout_toStartOf="@+id/textViewDateBack"
            android:layout_alignStart="@id/imageViewBack"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:textColor="@color/black"
            android:text="@string/loremIpsum"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cardViewFront"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageViewFront"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:padding="10dp"
            android:src="@color/gray"
            android:contentDescription="Activity Image" />

        <TextView
            android:id="@+id/textViewDateFront"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignEnd="@id/imageViewFront"
            android:layout_below="@id/imageViewFront"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:maxLines="2"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="DATE\n31"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/textViewTitleFront"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageViewFront"
            android:layout_toStartOf="@+id/textViewDateFront"
            android:layout_alignStart="@id/imageViewFront"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Title"/>

        <TextView
            android:id="@+id/textViewTagsFront"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTitleFront"
            android:layout_toStartOf="@+id/textViewDateFront"
            android:layout_alignStart="@id/imageViewFront"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text="#tag1 #tag2 #tag3"/>

        <TextView
            android:id="@+id/textViewDescriptionFront"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTagsFront"
            android:layout_toStartOf="@+id/textViewDateFront"
            android:layout_alignStart="@id/imageViewFront"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:textColor="@color/black"
            android:text="@string/loremIpsum"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
