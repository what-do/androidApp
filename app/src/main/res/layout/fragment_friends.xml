<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_friends"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:orientation="vertical"
    tools:context="com.reyesc.whatdo.FragmentFriends">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/whatdo"
            android:text="Friends"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/pretty_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/sendReq"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textColor="@color/pretty_blue" />

        <EditText
            android:id="@+id/friendId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@color/white"
            android:backgroundTint="@color/pretty_gray"
            android:hint="enter id"
            android:paddingBottom="5dp"
            android:textAlignment="center"
            android:textColorHint="@color/white" />
    </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/friendRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</LinearLayout>